{
  "name": "halo-protocol",
  "version": "0.1.0",
  "description": "Solana Anchor smart contract for ROSCA circles",
  "main": "index.js",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "test:revenue": "npx mocha --require ts-node/register tests/revenue-module.ts --timeout 120000",
    "test:solend": "npx mocha --require ts-node/register tests/solend-integration.ts --timeout 120000",
    "test:automation": "npx mocha --require ts-node/register tests/automation.ts --timeout 120000",
    "build": "anchor build",
    "deploy:localnet": "anchor deploy --provider.cluster localnet",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "start:localnet": "solana-test-validator",
    "example": "ts-node app/example.ts",
    "example:revenue": "ts-node app/revenue-example.ts",
    "example:solend": "ts-node app/solend-simple-example.ts",
    "example:solend-full": "ts-node app/solend-example.ts",
    "example:automation": "ts-node app/automation-example.ts",
    "example:production": "ts-node app/production-automation-example.ts",
    "deploy-script": "ts-node app/deploy.ts",
    "demo": "ts-node app/run-full-demo.ts",
    "demo:5-member": "ts-node app/demo-5-member-circle.ts",
    "demo:contributions": "ts-node app/simulate-contributions.ts",
    "demo:payouts": "ts-node app/simulate-payouts.ts",
    "demo:governance": "ts-node app/simulate-governance.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.28.0",
    "@solana/web3.js": "^1.87.6",
    "@solendprotocol/common": "^1.1.79",
    "@solendprotocol/solend-sdk": "^0.14.26"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunal-drall/halo.git"
  },
  "author": "Kunal",
  "license": "MIT"
}
